@model ML.Empleados
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Empleados</h2>

<div class="row">
    <div class="col-md-12">
        <h5>Seleccione un Empleado para editarlo o  para agregar...</h5>
    </div>
</div>

<div style="float:right;">
    @Html.ActionLink("Agregar Empleado", "Form", "Empleados", htmlAttributes: new {@class = "btn btn-success"})   
</div>


<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Editar</td>
            <td class="visually-hidden">ClaveEmpleado</td>
            <td>Nombre</td>
            <td>Fecha de Ingreso</td>
            <td>Fecha de Nacimiento</td>
            <td>Departamento</td>
            <td>Eliminar</td>
        </tr>

    </thead>
    <tbody>
        @foreach (ML.Empleados empleados in Model.Empleadoos)
        {
            <tr>
                <td><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "Empleados", new { ClaveEmpleado = empleados.ClaveEmpleado })"></a></td>

                <td class="visually-hidden">@empleados.ClaveEmpleado</td>
                <td>@empleados.NombreEmpleado</td>
                <td>@empleados.FechaIngreso</td>
                <td>@empleados.FechaNacimiento</td>
                <td>@empleados.Departamento</td>
                <td>
                    <form method="post" action="@Url.Action("Delete", "Empleados", new { id = empleados.ClaveEmpleado })" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este registro?');">
                        <button type="submit" class="btn btn-danger bi bi-trash2"></button>
                    </form>
                </td>

            </tr>
        }

    </tbody>

</table>