@model ML.Sueldos
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Form</h2>
<div class="row">
    <div class="container">
        <div class="col-md-12">
            <h2>Sueldo</h2>
            <h5>Ingrese los datos del Sueldo:</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Form", "Sueldos", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    @Html.HiddenFor(model => model.IDSueldo)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SueldoMensual)
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        @Html.TextBoxFor(model => model.Sueldo, new { @class = "form-control", @id = "txtSueldoMensual"})
                    </div>

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FormaPago)
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        @Html.TextBoxFor(model => model.FormaPago, new { @class = "form-control", @id = "txtFormaPago"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Empleados.ClaveEmpleado)
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        @Html.TextBoxFor(model => model.Empleados.ClaveEmpleado, new { @class = "form-control", @id = "txtClaveEmpleado"})
                    </div>
                </div>

                


                <div class="col-md-3">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    @Html.ActionLink("Regresar", "GetAll", "Sueldos", null, new { @class = "btn btn-danger" })
                </div>
            }
        </div>
    </div>
</div>